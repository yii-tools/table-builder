{
    "name": "yii-tools/table-builder",
    "type": "library",
    "description": "Table builder for PHP.",
    "keywords": [
        "yii-tools",
        "table",
        "builder"
    ],
    "license": "mit",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "psr/http-message": "^1.0",
        "yii-tools/awesome-widget": "^1.0@dev",
        "yii-tools/html": "^1.0@dev",
        "yiisoft/strings": "^2.1"
    },
    "require-dev": {
        "infection/infection": "^0.27",
        "maglnet/composer-require-checker": "^4.3",
        "phpunit/phpunit": "^10.1",
        "roave/infection-static-analysis-plugin": "^1.31",
        "vimeo/psalm": "^5.6",
        "yii-tools/data-provider": "^1.0@dev",
        "yii-tools/support": "^1.0@dev",
        "yiisoft/cache": "^3.0",
        "yiisoft/db-sqlite": "^1.0@dev"
    },
    "autoload": {
        "psr-4": {
            "Yii\\TableBuilder\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yii\\TableBuilder\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "check-dependencies": "composer-require-checker",
        "mutation": "roave-infection-static-analysis-plugin",
        "psalm": "psalm",
        "test": "phpunit"
    }
}
